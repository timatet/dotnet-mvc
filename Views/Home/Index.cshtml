@model IEnumerable<dotnet_mvc.Models.DataModels.ProductModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="block-container flex-space-between">
        <div class="flex-left">
            <a asp-controller="Product" asp-action="New" class="btn btn-outline-primary">
                <i class="bi bi-folder-plus"></i>
                Добавить товар
            </a>
        </div>
        <div class="flex-right">
            <a asp-controller="Account" asp-action="Basket" class="btn btn-outline-primary">
                <i class="bi bi-basket"></i>
                Корзина
            </a>
        </div>
    </div>

    <div class="block-container row">
        @foreach (var productModel in Model)
        {
            <div class="col-md-3 col-sm-4">
                <div class="card in-card">
                    <img src="@Url.Content("~/images/")@productModel.ImageUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@productModel.Name</h5>
                        <p class="card-text">
                            <span class="text-strip">
                                @productModel.Description
                            </span>
                        </p>
                        <div class="flex-space-between">
                            <a asp-controller="Product" asp-action="Info" asp-route-id="12" class="btn btn-primary">Открыть</a>
                            <a asp-controller="Product" asp-action="Info" asp-route-id="12" class="btn btn-primary">В корзину</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
   
</div>
